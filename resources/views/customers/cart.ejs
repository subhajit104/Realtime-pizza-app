<section class="cart py-16">
    <% if (session.cart) { %>
    <div class="order container mx-auto w-1/2 ">
        <div class="flex items-center border-grey-300 pb-4">
         <img src="img/cart-black.png" alt="">
         <h1 class="font-bold ml-4 text-2xl"> Order summary</h1>
        </div>
        <div class="pizza-cart">
           
             <% for( pizza of Object.values(session.cart.items) ) { %>
            <div class="flex items-center my-8">
                <img class="w-24" src="img/<%= pizza.item.image %>" alt="">
                <div class=" flex-1 ml-4">
                    <h1><%= pizza.item.name %></h1>
                    <span><%= pizza.item.size %></span>
                </div>
                <span class="flex-1"><%= pizza.qty %></span>
                <span class="font-bold text-lg"><%= pizza.item.price %></span>
            </div>
            <% } %>  

        </div>
        <hr>
        <div class="text-right py-4">
            <div>
             <span class="text-lg font-bold">Total Amount:</span>
             <span class="amount text-2xl font-bold"><%= session.cart.totalPrice %></span>
            </div>
            <div>
                <form action="" class="mt-12">
                    <input class="border border-grey-400 p-2 w-1/2 mb-4" type="text" placeholder="Phone Number" name="" id="">
                    <input class="border border-grey-400 p-2 w-1/2" type="text" placeholder="Address" name="" id="">
                    <br>
                    <button class="btn-primary px-6 py-2 rounded-full text-white mt-6 font-bold" type="submit" > Order Now</button>
                </form>
                <a class="inline-block cursor-pointer btn-primary rounded-full  text-white font-bold px-6 py-2"href="/"> Login to continue</a>
            </div>
        </div>
    </div>

    <% } else { %>
    <div class="empty-cart py-16">
        <div class="container mx-auto text-center">
            <h1 class="text-3xl font-bold mb-2">Cart empty</h1>
            <p class="text-grey-500 text-lg mb-12">You probably not ordered a pizza yet. 
            <br>  To order a pizza go to main page
            </p>
            <img src="img/empty-cart.png" class = "w-2/5 mx-auto" alt="">
            <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12 ">Go back</a>
        </div>   
    </div> 
    <% } %>  
</section>